#!/bin/sh

# get absolute path
abspath="$(cd "${0%/*}" 2>/dev/null; echo "$PWD"/"${0##*/}")"
# to get the path only - not the script name
path_only=`dirname "$abspath"`

NECO_INCLUDE=$path_only/../ctypes
echo PATH=$PATH:$path_only
echo NECO_INCLUDE=$NECO_INCLUDE
echo LD_LIBRARY_PATH=$LD_LIBRARY_PATH:.:$NECO_INCLUDE
echo PYTHONPATH=$PYTHONPATH:$path_only/..:$path_only/../ctypes
